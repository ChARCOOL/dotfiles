[bar/base]

pin-workspaces = true

font-0 = "OverpassMono Nerd Font Mono:pixelsize=10"
font-1 = "Font Awesome 5 Free:pixelsize=10"
font-2 = "Font Awesome 5 Brands:pixelsize=10"

