[colors]

background = ${xrdb:background}
foreground = ${xrdb:walcolor3}

focused = ${xrdb:walcolor7}
focused-bg = ${xrdb:color18}

danger = ${xrdb:color1}


[bar/base]

pin-workspaces = true

font-0 = "OverpassMono Nerd Font Mono:pixelsize=10"
font-1 = "Font Awesome 5 Free:pixelsize=10"
font-2 = "Font Awesome 5 Brands:pixelsize=10"

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

fixed-center = true

width = 100%
height = 35

background = ${colors.background}
foreground = ${colors.foreground}

radius = 0

padding-left = 4
padding-right = 4
module-margin = 2

underline-size = 2

modules-left = i3 
modules-center = title
modules-right = keyboard date


[bar/bar1]
inherit = bar/base
monitor = "DVI-I-1"


[bar/bar2]
inherit = bar/base
monitor = "HDMI-1-2"


[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true

format-underline = ${colors.focused-bg}

label-focused = %name%
label-focused-foreground = ${colors.focused}
label-focused-background = ${colors.focused-bg}
label-focused-underline = ${colors.focused}
label-focused-padding = 3

label-unfocused = %name%
label-unfocused-padding = 3

label-visible = %name%
label-visible-underline = ${colors.foreground}
label-visible-padding = 3

label-urgent = %name%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.danger}
label-urgent-padding = 3


[module/date]
type = internal/date
interval = 1.0
date = %A, %d %B %H:%M


[module/title]
type = internal/xwindow
format-foreground = ${colors.foreground}
format-padding = 1
label-maxlen = 50


[module/keyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock


