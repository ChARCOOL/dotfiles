"
" Environment
"

" Read plugins
source ~/.vim/plugins.vim


"
" Leader
"

nnoremap <space> <nop>
let mapleader="\<Space>"
let maplocalleader="\\"


"
" Vim UI
"

let g:material_theme_style = 'palenight'
augroup MyColors
  autocmd!
  autocmd ColorScheme * call joosep#colors#palenight#ModifyColorscheme()
augroup END
colorscheme material
