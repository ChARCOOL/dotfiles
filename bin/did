#!/bin/bash

# Prompt to filter running Docker containers using FZF and output the ID.
# For example, can be used like so: `docker logs $(did)`.
function did()
{
    local containerId=$(docker ps --format 'table {{.ID}}\t{{.Image}}' | eval "fzf ${FZF_DEFAULT_OPTS} -m --header='docker:containerId'" | awk '{print $1}')

    if [ "$containerId" != "CONTAINER" ] && [ "x$containerId" != "x" ]
    then
        echo $containerId
    fi
}

did
