[global]
    font = Overpass 10
    markup = yes
    format = "%s\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x10-10+48"
    ##transparency = 25
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 5
    separator_height = 0
    padding = 10
    horizontal_padding = 15
    separator_color = "#bfbfbf"
    startup_notification = false
    show_indicators = true
    dmenu = /usr/bin/dmenu -p dunst
    browser = /usr/bin/google-chrome-stable -new-tab
    icon_position = left
    icon_path = /usr/share/icons/Numix-Circle/48/status:/usr/share/icons/Numix-Circle/48/apps
    max_icon_size = 45
    frame_width = 0
    frame_color = "#ffffff"

[shortcuts]
    # Close notification.
    close = ctrl+space

    # Close all notifications.
    close_all = ctrl+shift+space

    # Redisplay last message(s).
    # On the US keyboard layout "grave" is normally above TAB and left
    # of "1". Make sure this key actually exists on your keyboard layout,
    # e.g. check output of 'xmodmap -pke'
    history = ctrl+grave

    # Context menu.
    context = ctrl+shift+period

[urgency_low]
    background = "#ffffff"
    foreground = "#595959"
    timeout = 5

[urgency_normal]
    background = "#ffffff"
    foreground = "#595959"
    timeout = 5

[urgency_critical]
    background = "#ffffff"
    foreground = "#595959"
    timeout = 5

[Discord]
    appname = Discord Canary
    format = "<b>%s</b>\n%b"
    new_icon = Discord

[Spotify]
    appname = Spotify
    format = "<b>Now Playing:</b>\n%s\n%b"
    new_icon = Spotify
    timeout = 10

[Transmission]
    appname = Transmission
    format = "<b>%s</b>\n%b"
    new_icon = Transmission
    timeout = 2000

