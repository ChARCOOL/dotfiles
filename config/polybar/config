[colors]

background = ${xrdb:background}
foreground = #9dc1de

focused = ${xrdb:color19}
focused-bg = ${xrdb:background}

icon = ${xrdb:color18}

clock = ${xrdb:color4}

danger = ${xrdb:color1}


[bar/base]

pin-workspaces = true

font-0 = "sans-serif:pixelsize=12;1"
font-1 = "Hack Nerd Font Mono:pixelsize=16;4"
font-2 = "Font Awesome 5 Free:pixelsize=10;1"
font-3 = "Font Awesome 5 Brands:pixelsize=10;1"
font-4 = "NotoEmoji:scale=10"

font-5 = "sans-serif:pixelsize=12:weight=light:antialias=true:hinting=true;1"
font-6 = "sans-serif:pixelsize=14:weight=medium:antialias=true:hinting=true;2"

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

fixed-center = true

width = 100%
height = 32

background = ${colors.background}
foreground = ${colors.foreground}

radius = 0

padding-left = 10
padding-right = 10
module-margin = 2

modules-left = i3 title
; modules-center = title
modules-right = keyboard date

tray-position = right


[bar/bar1]
inherit = bar/base
monitor = "DVI-I-1"


[bar/bar2]
inherit = bar/base
monitor = "HDMI-3"


[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true

label-focused = %name%
label-focused-foreground = ${colors.focused}
label-focused-background = ${colors.focused-bg}
label-focused-padding = 3

label-unfocused = %name%
label-unfocused-foreground = ${colors.icon}
label-unfocused-padding = 3

label-visible = %name%
label-visible-foreground = ${colors.icon}
label-visible-padding = 3

label-urgent = %name%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.danger}
label-urgent-padding = 3


[module/date]
type = internal/date
interval = 1.0

# Only show the time by default
date = %H:%M
# When clicked, show the date
date-alt = %A, %d %B

format = %{T7}<label>%{T-}

label-foreground = ${colors.foreground}


[module/title]
type = internal/xwindow
format-foreground = ${colors.foreground}
format-padding = 1
label-maxlen = 70
format = %{T6}<label>%{T-}


[module/keyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock

label-layout-foreground = ${colors.icon}


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>

; Only allow increasing volume up to 100%
use-ui-max = false

label-muted = muted

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 


